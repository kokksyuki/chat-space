.message
  .upper-info
    %p.upper-info__user
      = message.user.name
    %p.upper-info__date
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  .main-message
    - if message.body.present?
      %p.main-message__text
        = message.body
    = image_tag message.image.url, class: 'main-message__image' if message.image.present?
